<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Colors -->
    <color name="colorBase">#EEEEEE</color>
    <color name="colorPrimary">#181818</color>
    <color name="colorAccent">#FF5B36</color>
    <color name="colorText">#121212</color>
    <color name="colorTextSecondary">#636363</color>
    <color name="colorPrimaryVariant">#1C1C1C</color>

    <!--  Soft grey  -->
    <color name="colorSoftGrey">#888888</color>

    <!-- Base application theme. -->
    <style name="Theme.EShop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>